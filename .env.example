# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values.
# This file is loaded by python-dotenv at startup.
# Do NOT commit .env to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# LLM / OpenAI-compatible API
# ---------------------------------------------------------------------------
# Base URL for the OpenAI-compatible API (e.g., local vLLM, TGI, or OpenAI).
OPENAI_API_BASE=http://localhost:8001/v1
OPENAI_API_KEY=your-api-key-here

# ---------------------------------------------------------------------------
# Jira Credentials (used by standalone utility scripts)
# ---------------------------------------------------------------------------
JIRA_BASE_URL=https://jira.example.com
JIRA_API_TOKEN=your-jira-pat-here
JIRA_PROJECT=MYPROJECT
JIRA_ALLOWED_PROJECTS=MYPROJECT,SUPPORT,INFRA

# ---------------------------------------------------------------------------
# SharePoint Credentials (used by standalone test scripts)
# ---------------------------------------------------------------------------
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/YourSite
SHAREPOINT_CLIENT_ID=your-azure-client-id
SHAREPOINT_CLIENT_SECRET=your-azure-client-secret

# ---------------------------------------------------------------------------
# Database Credentials (used by test set generator and standalone scripts)
# ---------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_agents
DB_USER=postgres
DB_PASSWORD=your-db-password-here

# Collection UUID (for test set generation - see tests/create_test_set.py)
COLLECTION_ID=

# ---------------------------------------------------------------------------
# OpenAI Proxy URL (used by the /models endpoint)
# ---------------------------------------------------------------------------
OPENAI_PROXY_URL=http://localhost:8000/openai
